{% extends 'template.html.twig' %}

{% block title %} PFE {% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" >
            <li class="breadcrumb-item active" aria-current="page">Nombres de PFE par entreprise </li>
        </ol>
    </nav>

    <!-- cards -->
<div class="container">
    <div class="row">
    {% for message in pfe %}

    <div class="card text-white col-sm-4 m-2 bg-{% if loop.index is odd %}primary {% else%}secondary{%endif%} mb-3 " style="max-width: 18rem;">
        <div class="card-header"> {{ message.designation}}</div>
        <div class="card-body">
            <h5 class="card-title"> {{ message.pfe.count }} pfe(s)</h5>
            <p class="card-text"> </p>

        </div>
    </div>

    {% endfor %}
        </div>
        </div>



{% endblock %}
